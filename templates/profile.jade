doctype html
html
  head
    meta(charset='utf-8')
    title Profile
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css', type='text/css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css', type='text/css')
    link(rel='stylesheet', href='/public/css/main.css', type='text/css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.5.1/socket.io.js')
    
  body(style="background-color: #f2f2f2;")
    if !auth
      h1 Please login or sign up
      button: a(href="/login") Login
      button: a(href="/signup") Sign up
    else  
      include navbar
      #container
        .profile-header
            .profile-cover
            .profile-avatar.left 
              img(src="" alt="img")       
            .profile-name
              span
            .profile-navbar
              ul
                li.left: a(href="#") Timeline
                li.left: a(href="#") About
                li.left: a(href="#") Friends
                li.left: a(href="#") Photos
            .profile-friendzone
              button.friendzone-btn.right#friendzone-btn
        hr
        
        #about
        
        .new-status
          .status-my-avatar.left: img(src= avatarUrl alt="img")
          textarea(rows=3 placeholder="Write something..").status-input
          // button.add-photo-btn Add photo
          input(type="file" name="statusPhotos").status-photo
          button(onclick="addPost();").post-status-btn.right Post
        
        #newsfeed
        
      
      script(src="/public/js/ajaxFunctions.js" type="text/javascript")  
      script(src="/public/js/io.js" type="text/javascript")
      script(src="/public/js/notification.js" type="text/javascript")      
      script(src="/public/js/post.js" type="text/javascript")
      script(src="/public/js/profile.js" type="text/javascript")
