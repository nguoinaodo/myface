doctype html
html
  head
    title home
    meta(charset="utf-8")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" type="text/css")
    link(rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css")
    link(rel="stylesheet" type="text/css" href="/public/css/main.css")
  body(style="background-color: #f2f2f2;")
    if !auth
      h1 Please login or sign up
      button: a(href="/login") Login
      button: a(href="/signup") Sign up
    else 
      #navbar
          ul
            li.nav-left
              a(href='/')
                i.fa.fa-maxcdn
            li.nav-right
              a(href='/logout')
                i.fa.fa-power-off
            li.nav-right
              a(href='#')
                i.fa.fa-bell-o
            li.nav-right
              a(href='#')
                i.fa.fa-comments-o
            li.nav-right
              a(href='#')
                i.fa.fa-user-plus
            li.nav-right
              a.active(href='/') Home
            - var profileLink = "/user/" + myId
            
            li.nav-right
              a(href= profileLink)= displayName
            li.nav-right
              .navbar-avatar  
                img(src= avatarUrl alt="img")
      #container
          .new-status
            .status-my-avatar.left: img(src= avatarUrl alt="img")
            textarea(rows=3 placeholder="Write something..").status-input
            button.add-photo-btn Add photo
            button.post-status-btn.right Post
            
        
    script(src="/public/js/ajaxFunctions.js" type="text/javascript")        
    script(src="/public/js/post.js" type="text/javascript")
    script(src="/public/js/home.js" type="text/javascript")